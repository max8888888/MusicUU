<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drakeet="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.MainActivity">

    <include
        android:id="@+id/tool"
        layout="@layout/view_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <ImageView
            android:id="@+id/iv_title_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:src="@mipmap/netease" />

        <TextView
            android:id="@+id/iv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:text="网易云音乐" />

        <LinearLayout
            android:id="@+id/ll_search_container"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/search_btn_bg"
            android:orientation="horizontal"
            android:padding="3dp">

            <EditText
                android:id="@+id/et_search_content"
                style="?android:attr/textViewStyle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="搜索（歌名，人名等）"
                android:imeOptions="actionSearch"
                android:padding="2dp"
                android:singleLine="true"
                android:textColor="#FF666666" />

            <ImageButton
                android:id="@+id/ib_search_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_search_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:lineSpacingExtra="5dip"
            android:shadowColor="#ff000000"
            android:shadowRadius="5"
            android:shadowDx="3"
            android:shadowDy="3"
            android:text="========== 小马哥作品 =========="
            android:typeface="serif" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_search_container"
            android:layout_marginBottom="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:id="@+id/lv_search_history_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lv_search_history_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/lv_search_history_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="清除历史记录"
                    android:textSize="13sp" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>


    <Button
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        android:background="@drawable/round_red_90"
        android:includeFontPadding="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="切换音乐源"
        android:textColor="@color/white"
        android:textSize="14sp" />

</android.support.design.widget.CoordinatorLayout>
